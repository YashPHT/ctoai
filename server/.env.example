# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/assessli
MONGODB_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_SERVER_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# CORS Configuration
# Allowed origin for browser clients
CORS_ORIGIN=http://localhost:8080

# Body Parser Limits
JSON_LIMIT=1mb
URLENCODED_LIMIT=1mb

# Rate Limiting
# 15 minutes
RATE_LIMIT_WINDOW_MS=900000
# Max number of requests per window per IP
RATE_LIMIT_MAX=100

# If running behind a proxy/load balancer (e.g., Heroku/Render), enable trust proxy
# Set to a number to trust that many proxies; default is 1 when set
TRUST_PROXY=1

# Gemini configuration
GEMINI_API_KEY=
# Defaults to gemini-1.5-flash
GEMINI_MODEL=gemini-1.5-flash
# Timeout in ms
GEMINI_TIMEOUT_MS=15000

# JWT Configuration
# Secret key for JWT signing (use a strong random string in production)
JWT_SECRET=your-secret-key-change-this-in-production
# JWT expiration time (e.g., 30d, 7d, 24h)
JWT_EXPIRE=30d

# Session configuration
SESSION_SECRET=change-me-super-secret
# Session cookie max age in milliseconds (defaults to 1 day)
SESSION_COOKIE_MAX_AGE=86400000

# Google OAuth configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Must match the callback in Google Cloud Console
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
# Frontend URLs to redirect after OAuth success/failure
OAUTH_SUCCESS_REDIRECT=http://localhost:8080/auth-callback.html
OAUTH_FAILURE_REDIRECT=http://localhost:8080/login.html
