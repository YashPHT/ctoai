# Server Configuration
PORT=5000
NODE_ENV=development

# Datastore Configuration
# Directory where JSON datastore files are stored
DATA_DIR=./data

# CORS Configuration
# Allowed origin for browser clients
CORS_ORIGIN=http://localhost:8000

# Body Parser Limits
JSON_LIMIT=1mb
URLENCODED_LIMIT=1mb

# Rate Limiting
# 15 minutes
RATE_LIMIT_WINDOW_MS=900000
# Max number of requests per window per IP
RATE_LIMIT_MAX=100

# If running behind a proxy/load balancer (e.g., Heroku/Render), enable trust proxy
# Set to a number to trust that many proxies; default is 1 when set
TRUST_PROXY=1
